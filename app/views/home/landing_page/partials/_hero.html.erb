<section class="bg-white dark:bg-neutral-900 py-20 lg:py-32">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <!-- Hero Content -->
    <div class="animate-fade-in">
      <h1 class="text-4xl lg:text-6xl font-bold text-neutral-900 dark:text-white leading-tight mb-6">
        Own Your Content.
        <span class="bg-gradient-to-r from-primary-600 to-accent-500 text-transparent bg-clip-text">
          Own Your Future.
        </span>
      </h1>

      <p class="text-lg lg:text-xl text-neutral-600 dark:text-neutral-300 mb-10 leading-relaxed max-w-2xl mx-auto">
        WriteSpace is a simple, powerful, and open-source platform for writers who want to focus on what matters most: creating great content.
      </p>

      <div class="flex justify-center mb-12">
        <a href="<%= authenticated? ? "/dashboard" : rodauth(:user).create_account_path %>" class="bg-primary-600 hover:bg-primary-700 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl text-center">
          Start Your Blog for Free
        </a>
      </div>

      <!-- Social Proof -->
      <div class="text-sm text-neutral-500 dark:text-neutral-400">
        <p class="mb-4">Trusted by writers and developers worldwide</p>
        <div class="flex justify-center items-center space-x-8">
          <div class="flex items-center space-x-2">
            <%= heroicon "star", variant: :solid, options: { class: "w-5 h-5 text-accent-500" } %>
            <span>Free & Open Source</span>
          </div>
          <div class="flex items-center space-x-2">
            <%= heroicon "check-circle", variant: :solid, options: { class: "w-5 h-5 text-accent-500" } %>
            <span>No Ads, Ever</span>
          </div>
          <div class="flex items-center space-x-2">
            <%= heroicon "bolt", variant: :solid, options: { class: "w-5 h-5 text-accent-500" } %>
            <span>Fast & Performant</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
