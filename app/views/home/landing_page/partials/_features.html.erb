<section id="features" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl lg:text-4xl font-bold text-neutral-900 mb-4">
        Everything you need to <span class="text-primary-600">share your thoughts</span>
      </h2>
      <p class="text-lg text-neutral-600 max-w-3xl mx-auto">
        WriteSpace provides all the tools you need to create, share, and grow your writing.
        Simple, powerful, and built for writers who want to focus on what matters most.
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Feature 1: Blogging -->
      <div class="group bg-neutral-50 hover:bg-white border border-neutral-200 hover:border-primary-200 rounded-xl p-6 transition-all duration-300 hover:shadow-lg">
        <div class="w-12 h-12 bg-primary-100 group-hover:bg-primary-600 rounded-lg flex items-center justify-center mb-4 transition-colors duration-300">
          <%= heroicon "pencil-square", variant: :solid, options: { class: "w-6 h-6 text-primary-600 group-hover:text-white transition-colors duration-300" } %>
        </div>
        <h3 class="text-xl font-semibold text-neutral-900 mb-3">Simple Writing</h3>
        <p class="text-neutral-600 leading-relaxed">
          Clean, distraction-free editor that lets you focus on your thoughts. Create, edit, and publish your posts with ease.
        </p>
      </div>

      <!-- Feature 2: User Dashboard -->
      <div class="group bg-neutral-50 hover:bg-white border border-neutral-200 hover:border-primary-200 rounded-xl p-6 transition-all duration-300 hover:shadow-lg">
        <div class="w-12 h-12 bg-accent-100 group-hover:bg-accent-500 rounded-lg flex items-center justify-center mb-4 transition-colors duration-300">
          <%= heroicon "squares-2x2", variant: :solid, options: { class: "w-6 h-6 text-accent-600 group-hover:text-white transition-colors duration-300" } %>
        </div>
        <h3 class="text-xl font-semibold text-neutral-900 mb-3">Personal Dashboard</h3>
        <p class="text-neutral-600 leading-relaxed">
          Manage all your posts in one place. Track your writing progress and organize your content effortlessly.
        </p>
      </div>

      <!-- Feature 3: Community Engagement -->
      <div class="group bg-neutral-50 hover:bg-white border border-neutral-200 hover:border-primary-200 rounded-xl p-6 transition-all duration-300 hover:shadow-lg">
        <div class="w-12 h-12 bg-success-100 group-hover:bg-success-600 rounded-lg flex items-center justify-center mb-4 transition-colors duration-300">
          <%= heroicon "heart", variant: :solid, options: { class: "w-6 h-6 text-success-600 group-hover:text-white transition-colors duration-300" } %>
        </div>
        <h3 class="text-xl font-semibold text-neutral-900 mb-3">Engagement</h3>
        <p class="text-neutral-600 leading-relaxed">
          Connect with readers through likes and comments. Build a community around your ideas and stories.
        </p>
      </div>

      <!-- Feature 4: Secure Authentication -->
      <div class="group bg-neutral-50 hover:bg-white border border-neutral-200 hover:border-primary-200 rounded-xl p-6 transition-all duration-300 hover:shadow-lg">
        <div class="w-12 h-12 bg-neutral-100 group-hover:bg-neutral-800 rounded-lg flex items-center justify-center mb-4 transition-colors duration-300">
          <%= heroicon "lock-closed", variant: :solid, options: { class: "w-6 h-6 text-neutral-600 group-hover:text-white transition-colors duration-300" } %>
        </div>
        <h3 class="text-xl font-semibold text-neutral-900 mb-3">Secure & Private</h3>
        <p class="text-neutral-600 leading-relaxed">
          Your content is yours. Secure authentication and fine-grained privacy controls keep your writing safe.
        </p>
      </div>

      <!-- Feature 5: Share & Discover -->
      <div class="group bg-neutral-50 hover:bg-white border border-neutral-200 hover:border-primary-200 rounded-xl p-6 transition-all duration-300 hover:shadow-lg">
        <div class="w-12 h-12 bg-warning-100 group-hover:bg-warning-600 rounded-lg flex items-center justify-center mb-4 transition-colors duration-300">
          <%= heroicon "share", variant: :solid, options: { class: "w-6 h-6 text-warning-600 group-hover:text-white transition-colors duration-300" } %>
        </div>
        <h3 class="text-xl font-semibold text-neutral-900 mb-3">Share & Discover</h3>
        <p class="text-neutral-600 leading-relaxed">
          Share your posts easily and discover amazing content from other writers in the community.
        </p>
      </div>

      <!-- Feature 6: Open Source -->
      <div class="group bg-neutral-50 hover:bg-white border border-neutral-200 hover:border-primary-200 rounded-xl p-6 transition-all duration-300 hover:shadow-lg">
        <div class="w-12 h-12 bg-primary-100 group-hover:bg-primary-600 rounded-lg flex items-center justify-center mb-4 transition-colors duration-300">
          <%= heroicon "code-bracket", variant: :solid, options: { class: "w-6 h-6 text-primary-600 group-hover:text-white transition-colors duration-300" } %>
        </div>
        <h3 class="text-xl font-semibold text-neutral-900 mb-3">Developer Friendly</h3>
        <p class="text-neutral-600 leading-relaxed">
          Built with modern web technologies. Open source and extensible for developers who want to contribute.
        </p>
      </div>
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-16">
      <a href="#" class="inline-flex items-center space-x-2 bg-primary-600 hover:bg-primary-700 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl">
        <span>Start Your Writing Journey</span>
        <%= heroicon "arrow-right", variant: :outline, options: { class: "w-5 h-5" } %>
      </a>
    </div>
  </div>
</section>
