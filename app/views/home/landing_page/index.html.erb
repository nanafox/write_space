<!-- Navigation -->
<%= render "home/landing_page/partials/navigation" %>

<!-- Main Content -->
<main class="min-h-screen" data-controller="smooth-scroll">
  <!-- Hero Section -->
  <%= render "home/landing_page/partials/hero" %>

  <!-- Features Section -->
  <%= render "home/landing_page/partials/features" %>

  <% unless authenticated? %>
    <!-- Call to Action Section -->
    <section class="bg-white dark:bg-neutral-900 py-20">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl lg:text-4xl font-bold text-neutral-900 dark:text-white mb-6">
          Join the Next Generation of Writers
        </h2>
        <p class="text-xl text-neutral-600 dark:text-neutral-300 mb-8 leading-relaxed">
          Create your free account today and start sharing your ideas with the world.
        </p>
        <div class="flex justify-center">
          <a href="<%= rodauth(:user).create_account_path %>" class="bg-primary-600 hover:bg-primary-700 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl">
            Sign Up for Free
          </a>
        </div>
      </div>
    </section>
  <% end %>
</main>

<!-- Footer -->
<%= render "home/landing_page/partials/footer" %>
