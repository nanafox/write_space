<!-- Navigation -->
<%= render "home/landing_page/partials/navigation" %>

<!-- Main Content -->
<main class="min-h-screen" data-controller="smooth-scroll">
  <!-- Hero Section -->
  <%= render "home/landing_page/partials/hero" %>

  <!-- Features Section -->
  <%= render "home/landing_page/partials/features" %>

  <% unless authenticated? %>
    <!-- Call to Action Section -->
    <section class="bg-gradient-to-br from-primary-600 to-primary-800 py-20">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">
          Ready to start your writing journey?
        </h2>
        <p class="text-xl text-primary-100 mb-8 leading-relaxed">
          Join WriteSpace today and discover the joy of writing in a community that celebrates great content.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="<%= rodauth(:user).create_account_path %>" class="bg-white hover:bg-neutral-50 text-primary-600 px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl">
            Create Your Account
          </a>
          <a href="#" class="bg-transparent hover:bg-primary-700 text-white border-2 border-white px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-200">
            Learn More
          </a>
        </div>
      </div>
    </section>
  <% end %>
</main>

<!-- Footer -->
<%= render "home/landing_page/partials/footer" %>
